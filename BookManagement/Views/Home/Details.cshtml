@using BookManagement.Models
@model HomeDetailsViewModels
@{
    ViewBag.Title = "Book Details";
    var photoPath = "~/images/" + (Model.Book.PhotoPath ?? "noimage.jpg");
}

<div class="container justify-content-center m-3">
    <div class="row justify-content-center">
        <div class="col-sm-8">
            <div class="card">
                <div class="card-header">
                    @Model.Book.Title
                </div>
                <div class="card-body text-center">
                    <img class="card-img-top" src="@photoPath" alt="Book Image" asp-append-version="true">
                    <h4>Book ID: @Model.Book.Id</h4>
                    <h4>Author: @Model.Book.Author</h4>
                    <h4>Department: @Model.Book.Department</h4>
                </div>
                <div class="card-footer text-center">
                    <a asp-controller="home" asp-action="index" class="btn btn-primary">Back</a>
                    <a class="btn btn-primary" asp-action="edit" asp-asp-controller="home"
                       asp-route-id="@Model.Book.Id">Edit</a>
                    <a href="#" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div>
    </div>
</div>
