@using BookManagement.Models
@model BookEditViewModel
@{
    ViewBag.Title = "Edit An Employee";
    var photoPath = string.IsNullOrEmpty(Model?.ExistingPhotoPath) ? "/images/noimage.jpg" : "/images/" + Model.ExistingPhotoPath;
}

<form enctype="multipart/form-data" asp-controller="home" asp-action="edit" method="post" class="mt-3">
    <input hidden asp-for="Id" />
    <input hidden asp-for="ExistingPhotoPath" />
    <div class="form-group row mt-2">
        <label asp-for="Title" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Title" class="form-control" placeholder="Title" />
            <span asp-validation-for="Title" class="text-danger"></span>

        </div>
    </div>
    <div class="form-group row mt-2">
        <label asp-for="Author" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Author" class="form-control" placeholder="Author" />
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mt-2">
        <label asp-for="Department" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="Department" class="custom-select mr-sm-2"
                    asp-items="Html.GetEnumSelectList<Dept>()">
                <option value="" disabled selected>Select a Department</option>
            </select>

            <span asp-validation-for="Department" class="text-danger d-block"></span>
        </div>
    </div>
    <div class="form-group row mt-2">
        <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                @*                 <input asp-for="Photo" class="form-control" custom-file-input />
                *@                <input asp-for="Photo" class="form-control" custom-file-input value="@photoPath" />
            </div>
        </div>
    </div>
    <div class="form-group row col-sm-4 offset-4">
        <img src="@photoPath" asp-append-version="true" width="300" height="300" />
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-controller="home" asp-action="index" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>
